# Ambiente de Produção - Sistema de Ponto Eletrônico

# ============================================
# Aplicação
# ============================================
APP_NAME="Ponto Eletrônico"
APP_ENV=production
APP_KEY=base64:GENERATED_APP_KEY
APP_DEBUG=false
APP_URL=https://seu-dominio.com.br
APP_PORT=8000

# ============================================
# Banco de Dados
# ============================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=pontoeletronico
DB_USERNAME=pontouser
DB_PASSWORD=SUA_SENHA_FORTE_AQUI
DB_ROOT_PASSWORD=SUA_SENHA_ROOT_FORTE_AQUI

# ============================================
# Cache & Session
# ============================================
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ============================================
# Redis
# ============================================
REDIS_HOST=redis
REDIS_PASSWORD=SUA_SENHA_REDIS_AQUI
REDIS_PORT=6379

# ============================================
# Email (Configure com seu provedor)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-app
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=seu-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS S3 (Opcional - para armazenamento)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# Payment Gateways
# ============================================

# Mercado Pago
MERCADOPAGO_PUBLIC_KEY=APP_USR-xxxxxxxx
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxxxxxxx
MERCADOPAGO_WEBHOOK_SECRET=seu-webhook-secret-aqui

# Asaas
ASAAS_API_KEY=seu-api-key-aqui
ASAAS_ENVIRONMENT=production

# ============================================
# Logs
# ============================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ============================================
# Vite
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# PhpMyAdmin (Opcional - apenas para debug)
# ============================================
PMA_PORT=8080
